{
  "productName": "expensetracker",
  "version": "0.1.0",
  "identifier": "com.expensetracker.app",
  "build": {
    "devUrl": "http://localhost:1420/",
    "beforeDevCommand": "pnpm run dev",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "expensetracker",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": "default-src * 'unsafe-inline' 'unsafe-eval' data: blob:; connect-src *"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}